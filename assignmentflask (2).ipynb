   "source": [
    "from flask import url_for, Flask\n",
    "appFlask = Flask(__name__)\n",
    "@appFlask.route('/home')\n",
    "def home():\n",
    "    return 'We are in Home Page!'\n",
    "with appFlask.test_request_context():\n",
    "    print(url_for('home'))"
   ]
